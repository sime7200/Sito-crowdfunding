<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Project Details</title>
    <%- include('partials/head.ejs');%>
  </head>

  <body>
    <!--Inizio navbar-->
    <%- include('partials/header');%>
    <div class="container">
      <div class="row">
        <h1 class="mt-4">Dettaglio progetto</h1>
        <div class="col-12 d-flex justify-content-end my-4 pb-4">
          <%if(!project.isFollow) {%>
          <form method="POST" action="/addFollow">
            <button
              class="btn btn-primary mr-2"
              type="submit"
              name="projectId"
              value="<%= project.id %> "
            >
              <i class="fa fa-star-o"></i>
              Aggiungi ai preferiti
            </button>
          </form>
          <% } %>
          <div></div>
          <%if(project.isFollow) {%>
          <form method="POST" action="/removeFollow">
            <button
              class="btn btn-primary mr-2"
              type="submit"
              name="projectId"
              value="<%= project.id %> "
            >
              <i class="fa fa-star"></i>
              Rimuovi dai preferiti
            </button>
          </form>
          <% } %>

          <div class="btn-modal mr-2">
            <button
              class="btn btn-primary"
              data-toggle="modal"
              data-target="#modifica-prog"
            >
              Modifica progetto
            </button>
          </div>
          <form action="/deleteProject" method="POST">
            <button
              class="btn btn-warning"
              type="submit"
              name="deleteProjectId"
              value="<%= project.id %> "
            >
              Elimina progetto
            </button>
          </form>
        </div>
      </div>
      <div class="row row-dettaglio">
        <div class="col-4">
          <img src="<%= project.image %>" />
        </div>
        <div class="col-8">
          <div class="info-utente">
            <div class="Id progetto">
              <h4>Id progetto</h4>
              <p id="id" name="id" for="id">Id progetto: <%= project.id%></p>
            </div>
            <div class="titolo">
              <h4>Titolo</h4>
              <p><%= project.title%></p>
            </div>
            <div class="descrizione">
              <h4>Descrizione</h4>
              <p><%= project.description%></p>
            </div>
            <div class="autore">
              <h4>Autore</h4>
              <p><%= project.author_name%></p>
            </div>
            <div class="categoria">
              <h4>Categoria</h4>
              <p><%= project.category%></p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="btn-modal">
          <% if(user.username==project.author_name) {%>
          <button
            class="btn btn-success"
            data-toggle="modal"
            data-target="#new-document"
          >
            Aggiungi documento
          </button>
          <%}%>
        </div>
      </div>
      <div class="row">
        <h2>Documenti</h2>
        <table id="documents-table" class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Titolo</th>
              <th scope="col">Autore</th>
              <th scope="col">Descrizione</th>
              <th scope="col">Data</th>
            </tr>
          </thead>
          <tbody id="table-documents-body">
            <% documents.forEach(element => { %>
            <tr>
              <td><%=element.id%></td>
              <td><%=element.title%></td>
              <td><%=element.author%></td>
              <td><%=element.description%></td>
              <td><%=element.date%></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="row-commenti">
        <h2>Commenti</h2>
        <div class="col-12">
          <form action="/createComment" method="POST">
            <div>
              <textarea
                id="new-comment"
                name="description"
                rows="4"
                cols="100"
              ></textarea>
            </div>

            <button
              class="btn btn-primary"
              type="submit"
              name="projectId"
              value="<%= project.id %> "
            >
              Aggiungi commento
            </button>
          </form>
        </div>

        <% if(comments) {%>
        <div class="list-group">
          <% comments.forEach(comment => { %>
          <div class="d-flex w-100 justify-content-between">
            <label>Data</label>
            <small><%= comment.creation_date %></small>
          </div>

          <p class="mb-1"><%= comment.description %></p>
          <label>Utente</label>
          <small><%= comment.user_name %></small>
          <% }); %> <% } %>
        </div>
      </div>
    </div>

    <!--Modale aggiungi documento-->
    <div class="modal fade" id="new-document" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Aggiungi un nuovo documento</h5>
            <button
              type="button"
              class="close"
              id="close-modal"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form role="form" method="POST" action="/newDocument">
            <div class="modal-body">
              <div class="form-group">
                <label for="author">Autore</label>

                <input
                  type="text"
                  name="author"
                  class="form-control"
                  value="<%= project.author_name %>"
                  defaultValue="<%= project.author_name %>"
                />
              </div>

              <div class="form-group">
                <label for="title">Titolo</label>
                <input type="text" name="title" class="form-control" />
              </div>

              <div class="form-group">
                <label for="description">Descrizione</label>
                <input type="text" name="description" class="form-control" />
              </div>

              <div class="form-group">
                <label for="date">Data</label>
                <input type="date" name="date" class="form-control" />
              </div>

              <div class="form-group">
                <label for="type">Prezzo</label>
                <input type="number" name="type" class="form-control" />
              </div>

              <div class="form-group">
                <input
                  hidden
                  type="number"
                  name="project_id"
                  value="<%= project.id%>"
                  class="form-control"
                />
              </div>
              <div class="modal-footer">
                <div class="form-group">
                  <div>
                    <button class="btn btn-success">Salva</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!--Modale modifica progetto-->

    <div class="modal fade" id="modifica-prog" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Modifica progetto</h5>
            <button
              type="button"
              class="close"
              id="close-modal"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form role="form" method="POST" action="/modifica">
            <div class="modal-body">
              <div class="form-group">
                <label
                  for="author"
                  name="author"
                  value="<%= project.author_name%>"
                  >Autore: <%= project.author_name%></label
                >
                <!--
                <input
                  type="text"
                  name="author"
                  class="form-control"
                />
                -->
              </div>

              <div class="form-group">
                <label for="title">Titolo</label>
                <input type="text" name="title" class="form-control" />
              </div>

              <div class="form-group">
                <label for="description">Descrizione</label>
                <input type="text" name="description" class="form-control" />
              </div>

              <div class="form-group">
                <label for="categoria">Categoria</label>
                <select class="form-control" name="category">
                  <option>Seleziona una categoria</option>
                  <option>Tecnologia</option>
                  <option>Cucina</option>
                  <option>Animali</option>
                </select>
              </div>

              <div class="form-group">
                <label for="image">Immagine</label>
                <input type="file" name="image" class="form-control" />
              </div>

              <div class="modal-footer">
                <div class="form-group">
                  <div>
                    <button
                      name="id_prog"
                      class="btn btn-success"
                      value="<%=project.id%>"
                    >
                      Salva
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs');%>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/javascript/index.js"></script>
  </body>
</html>
