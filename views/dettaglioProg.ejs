<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Project Details</title>
    <%- include('partials/head.ejs');%>
  </head>

  <body>
    <!--Inizio navbar-->
    <%- include('partials/header');%>
    <!--fine navbar-->

    <div class="container">
      <div class="row">
        <h1 class="mt-4">Dettaglio progetto</h1>
        <div class="col-12 d-flex justify-content-end my-4 pb-4">
          <%if(user && !project.isFollow) {%>
          <form method="POST" action="/addFollow">
            <button
              class="btn btn-primary mr-2"
              type="submit"
              name="projectId"
              value="<%= project.id %> "
            >
              <i class="fa fa-star-o"></i>
              Aggiungi ai preferiti
            </button>
          </form>
          <% } %>
          <div></div>
          <%if(user && project.isFollow) {%>
          <form method="POST" action="/removeFollow">
            <button
              class="btn btn-primary mr-2"
              type="submit"
              name="projectId"
              value="<%= project.id %> "
            >
              <i class="fa fa-star"></i>
              Rimuovi dai preferiti
            </button>
          </form>
          <% } %> <% if(user && user.username==project.author_name) {%>
          <div class="btn-modal mr-2">
            <button
              class="btn btn-secondary"
              data-toggle="modal"
              data-target="#modifica-prog"
            >
              Modifica progetto
            </button>
          </div>
          <form action="/deleteProject" method="POST">
            <button
              class="btn btn-danger"
              type="submit"
              name="deleteProjectId"
              value="<%= project.id %> "
            >
              Elimina progetto
            </button>
          </form>
          <%}%>
        </div>
      </div>

      <!--info progetto-->
      <div class="row row-dettaglio">
        <div class="col-4">
          <img src="<%= project.image %>" />
        </div>
        <div class="col-8">
          <div class="info-utente">
            <div class="Id progetto">
              <h4>Id progetto</h4>
              <p id="id" name="id" for="id">Id progetto: <%= project.id%></p>
            </div>
            <div class="titolo">
              <h4>Titolo</h4>
              <p><%= project.title%></p>
            </div>
            <div class="descrizione">
              <h4>Descrizione</h4>
              <p><%= project.description%></p>
            </div>
            <div class="autore">
              <h4>Autore</h4>
              <p><%= project.author_name%></p>
            </div>
            <div class="categoria">
              <h4>Categoria</h4>
              <p><%= project.category%></p>
            </div>
            <div class="donazioni">
              <h4>Donazioni su questo progetto</h4>
              <p><%= project.donations_total%> Euro</p>
            </div>
          </div>
        </div>
      </div>

      <!--donazioni progetto-->
      <%if(user) {%>
      <div class="row row-carta mt-4">
        <div class="col-12">
          <h2>Inserisci i dati per la donazione</h2>
          <form action="/donation" method="POST">
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Name</span>
              <input
                name="name"
                type="text"
                class="form-control"
                aria-label="name"
                aria-describedby="basic-addon1"
                pattern="^[A-Z]{0,}[a-z]{0,}"
                title="Inserire il nome sulla carta"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Surname</span>
              <input
                name="surname"
                type="text"
                class="form-control"
                aria-label="surname"
                aria-describedby="basic-addon1"
                pattern="^[A-Z]{0,}[a-z]{0,}"
                title="Inserire il cognome sulla carta"
              />
            </div>

            <div class="form-group">
              <label for="documento">Inserisci il tipo della carta</label>
              <select class="form-control" name="documento">
                <option>Seleziona</option>
                <option>Paypal</option>
                <option>Carta di credito</option>
              </select>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1"
                >Numero carta</span
              >
              <input
                id="numCarta"
                name="numeroCarta"
                type="text"
                class="form-control"
                aria-label="numeroCarta"
                aria-describedby="basic-addon1"
                required
                maxlength="16"
                minlength="16"
                pattern="^[0-9]{1,16}"
                title="Inserire il numero della carta senza lettere"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">CVV</span>
              <input
                name="cvv"
                type="text"
                class="form-control"
                aria-label="cvv"
                aria-describedby="basic-addon1"
                maxlength="3"
                minlength="3"
                pattern="^[0-9]{1,16}"
                title="Inserire il numero CVV dietro la carta"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text">€</span>
              <input
                name="euro"
                type="number"
                class="form-control"
                aria-label="Amount"
              />
              <span class="input-group-text">.00</span>
            </div>
            <button
              class="btn btn-success mr-2"
              type="submit"
              name="donazione"
              value="<%= project.id %> "
            >
              Dona ora
            </button>
          </form>
        </div>
      </div>
      <%}%>

      <div class="row-doc">
        <div class="row doc-container">
          <h2>Documenti</h2>
          <div class="btns d-flex">
            <div class="btn-modal mr-3">
              <% if(user && user.username==project.author_name) {%>
              <button
                class="btn btn-primary"
                data-toggle="modal"
                data-target="#new-document"
              >
                Aggiungi documento
              </button>
              <%}%>
            </div>
          </div>
        </div>
        <%if(documents && documents.length) {%>
        <table id="documents-table" class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Titolo</th>
              <th scope="col">Autore</th>
              <th scope="col">Descrizione</th>
              <th scope="col">Data</th>
              <th scope="col">Prezzo (€)</th>
              <th scope="col">Preferito</th>
            </tr>
          </thead>
          <tbody id="table-documents-body">
            <% documents.forEach(element => { %>
            <tr>
              <td><%=element.id%></td>
              <td><%=element.title%></td>
              <td><%=element.author%></td>
              <td><%=element.description%></td>
              <td><%=element.date%></td>
              <td><%=element.type%></td>
              <% if(!element.isFollow) { %>
              <td class="icon" onclick="addDocToFavourites('<%=element.id%>')">
                <i class="fa fa-star-o"></i>
              </td>
              <% } else { %>
              <td
                class="icon"
                onclick="removeDocFromFavourites('<%=element.id%>')"
              >
                <i class="fa fa-star"></i>
              </td>
              <% }; %>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% }; %>
      </div>

      <%if(user) {%>
      <div class="row row-acquisto mt-4">
        <div class="col-12">
          <form>
            <!--<div class="input-group mb-3">-->
            <div class="form-group">
              <label for="documento"
                >Scegli e inserisci i dati per acquistare un documento</label
              >
              <select class="form-control" name="documento">
                <option>Seleziona un documento</option>
                <%documents.forEach(doc => {%>
                <option><%=doc.title%></option>
                <%});%>
              </select>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Name</span>
              <input
                name="name"
                type="text"
                class="form-control"
                aria-label="name"
                aria-describedby="basic-addon1"
                pattern="^[A-Z]{0,}[a-z]{0,}"
                title="Inserire il nome sulla carta"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Surname</span>
              <input
                name="surname"
                type="text"
                class="form-control"
                aria-label="surname"
                aria-describedby="basic-addon1"
                pattern="^[A-Z]{0,}[a-z]{0,}"
                title="Inserire il cognome sulla carta"
              />
            </div>
            <div class="form-group">
              <label for="documento">Inserisci il tipo della carta</label>
              <select class="form-control" name="documento">
                <option>Seleziona</option>
                <option>Paypal</option>
                <option>Carta di credito</option>
              </select>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1"
                >Numero carta</span
              >
              <input
                id="numCarta"
                name="numeroCarta"
                type="text"
                class="form-control"
                aria-label="numeroCarta"
                aria-describedby="basic-addon1"
                required
                maxlength="16"
                minlength="16"
                pattern="^[0-9]{1,16}"
                title="Inserire il numero della carta senza lettere"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">CVV</span>
              <input
                name="cvv"
                type="text"
                class="form-control"
                aria-label="cvv"
                aria-describedby="basic-addon1"
                maxlength="3"
                minlength="3"
                pattern="^[0-9]{1,16}"
                title="Inserire il numero CVV dietro la carta"
              />
            </div>

            <button
              class="btn btn-success mr-2"
              type="submit"
              name="donazione"
              value="<%= project.id %> "
            >
              Compra documento
            </button>
          </form>
        </div>
      </div>
      <%}%>

      <div class="row-commenti">
        <% if(comments) {%>
        <h2>Commenti</h2>
        <% }; %> <%if(user) {%>
        <div class="col-12">
          <form action="/createComment" method="POST">
            <div>
              <textarea
                id="new-comment"
                name="description"
                rows="4"
                cols="100"
              ></textarea>
            </div>

            <%if(user) {%>
            <button
              class="btn btn-primary mt-2 mb-2"
              type="submit"
              name="projectId"
              value="<%= project.id %> "
            >
              Aggiungi commento
            </button>
            <% }; %>
          </form>
        </div>
        <% }; %> <% if(comments) {%>
        <div class="list-group">
          <% comments.forEach(comment => { %>
          <div class="single-comment">
            <div class="">
              <small><strong><%= comment.user_name %></strong></small> -
              <small><%= comment.creation_date %></small>
            </div>

            <p class="mb-1"><%= comment.description %></p>
            <% if(user && user.id === comment.user_id) {%>
            <button
              onclick="onOpenUpdateCommentModal('<%=comment.description%>', '<%=comment.id%>')"
              type="button"
              data-target="#update-comment"
              data-toggle="modal"
              class="btn btn-secondary"
            >
              Modifica
            </button>
            <form action="/deleteComment" method="POST">
              <button
                name="id_commento"
                value="<%=comment.id%>"
                type="submit"
                class="btn btn-danger"
              >
                Elimina
              </button>
            </form>
            <% } %>
          </div>
          <% }); %> <% } %>
        </div>
      </div>
    </div>

    <!--Modale aggiungi documento-->
    <div class="modal fade" id="update-comment" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Modifica commento</h5>
            <button
              type="button"
              class="close"
              id="close-modal"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form role="form" method="POST" action="/updateComment">
            <div class="modal-body">
              <div class="form-group">
                <label for="description">Descrizione</label>

                <input
                  id="comment-description"
                  type="text"
                  name="description"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <input
                  id="comment_id"
                  type="text"
                  name="comment_id"
                  class="form-control"
                  hidden
                />
              </div>

              <div class="modal-footer">
                <div class="form-group">
                  <div>
                    <button class="btn btn-success">Salva</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!--Modale aggiungi documento-->
    <div class="modal fade" id="new-document" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Aggiungi un nuovo documento</h5>
            <button
              type="button"
              class="close"
              id="close-modal"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form role="form" method="POST" action="/newDocument">
            <div class="modal-body">
              <div class="form-group">
                <label for="author">Autore</label>

                <input
                  type="text"
                  name="author"
                  class="form-control"
                  value="<%= project.author_name %>"
                  defaultValue="<%= project.author_name %>"
                />
              </div>

              <div class="form-group">
                <label for="title">Titolo</label>
                <input type="text" name="title" class="form-control" />
              </div>

              <div class="form-group">
                <label for="description">Descrizione</label>
                <input type="text" name="description" class="form-control" />
              </div>

              <div class="form-group">
                <label for="date">Data</label>
                <input type="date" name="date" class="form-control" />
              </div>

              <div class="form-group">
                <label for="type">Prezzo</label>
                <input type="number" name="type" class="form-control" />
              </div>

              <div class="form-group">
                <input
                  hidden
                  type="number"
                  name="project_id"
                  value="<%= project.id%>"
                  class="form-control"
                />
              </div>
              <div class="modal-footer">
                <div class="form-group">
                  <div>
                    <button class="btn btn-success">Salva</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!--Modale modifica progetto-->
    <div class="modal fade" id="modifica-prog" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Modifica progetto</h5>
            <button
              type="button"
              class="close"
              id="close-modal"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form
            role="form"
            method="POST"
            action="/modifica"
            enctype="multipart/form-data"
            enctype="multipart/form-data"
          >
            <div class="modal-body">
              <div class="form-group">
                <label
                  for="author"
                  name="author"
                  value="<%= project.author_name%>"
                  >Autore: <%= project.author_name%></label
                >
              </div>

              <div class="form-group">
                <label for="title">Titolo</label>
                <input type="text" name="title" class="form-control" />
              </div>

              <div class="form-group">
                <label for="description">Descrizione</label>
                <input type="text" name="description" class="form-control" />
              </div>

              <div class="form-group">
                <label for="categoria">Categoria</label>
                <select class="form-control" name="category">
                  <option>Seleziona una categoria</option>
                  <option>Tecnologia</option>
                  <option>Cucina</option>
                  <option>Animali</option>
                  <option>Arredamento</option>
                  <option>Sport</option>
                </select>
              </div>

              <div class="form-group">
                <label for="image">Immagine</label>
                <input type="file" name="image" class="form-control" />
              </div>

              <div class="modal-footer">
                <div class="form-group">
                  <div>
                    <button
                      name="id_prog"
                      class="btn btn-success"
                      value="<%=project.id%>"
                    >
                      Salva
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs');%>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
      crossorigin="anonymous"
    ></script>

    <script type="text/javascript" src="/javascript/index.js"></script>
  </body>
</html>
